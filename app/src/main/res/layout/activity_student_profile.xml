<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfile">


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:textColor="@color/red"
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StudentName" />


    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:id="@+id/student_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID : "
        android:layout_below="@+id/student_name"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:textColor="@color/light_blue"
        android:id="@+id/student_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID : "
        android:layout_toRightOf="@+id/student_id_txt"
        android:layout_below="@+id/student_name"/>



    <TextView
        android:layout_marginLeft="10dp"
        android:textSize="24sp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Days Off :"
        android:layout_below="@+id/student_id"/>

    <TextView
        android:id="@+id/total_days_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_id"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="0"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_btn"
        android:padding="12dp"
        android:background="@drawable/button_back"
        android:text="DELETE STUDENT"
        android:textSize="14dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_below="@+id/total_days_off"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="ifContentScrolls"
        android:layout_below="@+id/delete_btn"/>


</RelativeLayout>